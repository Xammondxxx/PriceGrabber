<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceGrabber.CustomControls.CheckBox"
             x:Name="This"
             xmlns:CustomControls="clr-namespace:PriceGrabber.CustomControls"
             >
    <StackLayout WidthRequest="{Binding Width, Source={Reference This}}"  VerticalOptions="Center"
             Orientation="Horizontal">
        <Grid HeightRequest="20" WidthRequest="20" HorizontalOptions="Start" VerticalOptions="Center">
            <Image x:Name="imgAcceptConditionCheck" VerticalOptions="Fill" HorizontalOptions="Fill" />
            <Image x:Name="imgAcceptConditionRect" Source="LightGrayRectangle" VerticalOptions="Fill" HorizontalOptions="Fill" />
        </Grid>
        <Label x:Name="lbText" FontSize="14" Margin="5,0,0,0"  VerticalOptions="Center">
        </Label>
    </StackLayout>
</StackLayout>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceGrabber.Pages.MainPage">
    <ContentPage.Content>
        <Grid x:Name="mainGrid" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" 
              RowSpacing="20" ColumnSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="btnGrabber" Text="Price Grabber" TextColor="White" FontSize="Large" BackgroundColor="{StaticResource MainBackgroundColor}"></Button>

            <Button x:Name="btnLeadGen" Grid.Column="1" Text="Lead Generator" FontSize="Large"  TextColor="White"></Button>
            <Button Grid.Row="1" Text="Empty 2" FontSize="Large" TextColor="White"></Button>
            <Button Grid.Row="1" Grid.Column="1" Text="Empty 3" FontSize="Large" TextColor="White" ></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>